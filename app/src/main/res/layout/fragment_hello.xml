<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hello"
    tools:context=".Hello">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/zalogujbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="365dp"
        android:layout_marginBottom="31dp"
        android:background="@color/darkred"
        android:text="Zaloguj się"
        android:textColor="#EAEAEA"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/zarejestrujbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/zarejestrujbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="239dp"
        android:background="@color/deepgreen"
        android:text="Utwórz konto"
        android:textColor="#EAEAEA"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zalogujbtn" />

</androidx.constraintlayout.widget.ConstraintLayout>